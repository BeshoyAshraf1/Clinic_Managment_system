@model GradPro.Models.RoleModel

@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/_Layout_Patient.cshtml";
}

<h4>Add Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="AddRole" class="btn btn-primary" />
                <input type="button" value="Back" class="btn btn-primary" onclick="window.location.href='@Url.Action("Login","Account")'" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
