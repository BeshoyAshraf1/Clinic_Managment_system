@*
*@
@{
    Layout = "~/Views/Shared/_Layout_Patient.cshtml";
}

<!-- Hero Carousel -->
<section class="hero-carousel py-0" id="hero-carousel">
    <div id="carouselExampleControls" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/hospital1.jpg" class="d-block w-100" alt="Hospital 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to Our Hospital</h5>
                    <p>Providing top-notch care with state-of-the-art facilities.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/hospital2.jpg" class="d-block w-100" alt="Hospital 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Advanced Medical Technology</h5>
                    <p>Utilizing the latest technology for accurate diagnoses and effective treatments.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/hospital3.jpg" class="d-block w-100" alt="Hospital 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Experienced Medical Professionals</h5>
                    <p>Our team of experts is dedicated to your health and well-being.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


<!-- About -->
<section class="about py-5" id="about">
    <div class="container">
        <div class="row align-items-center">
            <!-- About Image -->
            <div class="col-12 col-md-6 mb-4 mb-md-0">
                <div class="about-img">
                    <img src="~/images/about.png" class="img-fluid rounded-3" alt="About Us">
                </div>
            </div>
            <!-- About Text -->
            <div class="col-12 col-md-6">
                <div class="about-text text-center text-md-start">
                    <span class="d-block text-uppercase text-muted mb-2">About Us</span>
                    <h2 class="fw-bold mb-3">Top-Quality Care and Management</h2>
                    <p class="mb-4">
                        Our clinic is renowned for having the best doctors and providing the highest quality care.
                        Our advanced clinic management system ensures smooth operations and exceptional patient
                        experiences. Take advantage of our special offers and book an appointment with one of our
                        expert doctors today.
                    </p>
                    <a href="Patient/Appoitment" class="btn btn-primary">Make an Appointment</a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Services Section -->
<section class="menu py-5" id="services">
    <div class="container">
        <div class="text-center mb-5">
            <span class="d-block text-uppercase text-muted">Services</span>
            <h2 class="fw-bold">Our Specialized Services</h2>
        </div>
        <div class="row justify-content-center g-4">
            <!-- Service 1 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="box card h-100 shadow-sm border-0">
                    <div class="box-img">
                        <img src="~/images/img1.png" class="card-img-top" alt="General Consultation">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">General Consultation</h5>
                        <p class="card-text">
                            Our experienced doctors provide comprehensive medical consultations to assess your
                            health and recommend the best treatment options.
                        </p>
                        <button class="btn btn-outline-primary">
                            <i class='bx bx-cart-alt'></i>
                            <a href="Patient/Appoitment" class="btn btn-primary">Book Now</a>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Service 2 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="box card h-100 shadow-sm border-0">
                    <div class="box-img">
                        <img src="~/images/img2.png" class="card-img-top" alt="Dental Care">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">Dental Care</h5>
                        <p class="card-text">
                            We offer a full range of dental services, from routine check-ups to advanced treatments,
                            ensuring optimal oral health for all ages.
                        </p>
                        <button class="btn btn-outline-primary">
                            <i class='bx bx-cart-alt'></i>
                            <a href="Patient/Appoitment" class="btn btn-primary">Book Now</a>

                        </button>
                    </div>
                </div>
            </div>
            <!-- Service 3 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="box card h-100 shadow-sm border-0">
                    <div class="box-img">
                        <img src="~/images/img3.png" class="card-img-top" alt="Physical Therapy" style="height: 414px;">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">Physical Therapy</h5>
                        <p class="card-text">
                            Our physical therapy services help you recover from injuries and improve mobility
                            through personalized treatment plans.
                        </p>
                        <button class="btn btn-outline-primary">
                            <i class='bx bx-cart-alt'></i>
                            <a href="Patient/Appoitment" class="btn btn-primary">Book Now</a>

                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="testimonials py-5 bg-light" id="testimonials">
    <div class="container">
        <div class="text-center mb-5">
            <span class="d-block text-uppercase text-muted">Patient Testimonials</span>
            <h2 class="fw-bold">What Our Patients Say</h2>
        </div>
        <div class="row">
            <!-- Testimonial 1 -->
            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <div class="testimonial p-4 border rounded-3 shadow-sm">
                    <p class="mb-3">
                        "The care I received was exceptional. The staff is professional and truly cares about their
                        patients."
                    </p>
                    <cite>- Jane Doe</cite>
                </div>
            </div>
            <!-- Testimonial 2 -->
            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <div class="testimonial p-4 border rounded-3 shadow-sm">
                    <p class="mb-3">
                        "I've never felt more confident in my health care. The doctors are knowledgeable and the
                        facilities are top-notch."
                    </p>
                    <cite>- John Smith</cite>
                </div>
            </div>
            <!-- Testimonial 3 -->
            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <div class="testimonial p-4 border rounded-3 shadow-sm">
                    <p class="mb-3">
                        "A wonderful experience from start to finish. Highly recommend to anyone looking for quality
                        care."
                    </p>
                    <cite>- Emily Johnson</cite>
                </div>
            </div>
        </div>
    </div>
</section>
