<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GradPro</title>
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/GradPro.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional: FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional: FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg shadow-sm">
            @if (@User.Identity.IsAuthenticated)
            {
                <div class="container">
                    <a id="anchortext" class="navbar-brand" href="#">
                    <img src="~/images/logo.png" alt="Clinic Logo" width="40" height="40" class="d-inline-block align-text-top">
                    Clinic Name
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a id="anchortext" class="nav-link active" aria-current="page" href="#hero-carousel">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="anchortext" class="nav-link" href="#about">
                                <i class="fas fa-info-circle"></i> About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="anchortext" class="nav-link" href="#services">
                                <i class="fas fa-stethoscope"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="anchortext" class="nav-link" href="#testimonials">
                                <i class="fas fa-comment-dots"></i> Testimonials
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="anchortext" class="nav-link" href="#footer">
                                <i class="fas fa-envelope"></i> Contact
                            </a>
                        </li>
                        <!-- Appointments Button -->
                        <li class="nav-item">
                            <a href="Patient/Details" class="btn btn-primary ms-lg-3">
                                <i class="fas fa-calendar-alt"></i> Appointments
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a id="anchortext" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false" aria-label="User Account">
                                    <i class="fas fa-user"></i>@User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                          
                        </li>
                    </ul>
                </div>
            </div>
            }
            else
            {
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                           @*  <li class="nav-item">
                                <a id="anchortext" class="nav-link active" aria-current="page" href="~/Role/Index">
                                    <i class="fas fa-lock"></i>Roles
                                </a>

                            </li> *@ 
                            <li class="nav-item">
                                <a id="anchortext" class="nav-link active" aria-current="page" href="~/Account/Register">
                                    <i class="fas fa-user-plus"></i>Register
                                </a>
                               
                            </li>
                            <li class="nav-item">
                                <a id="anchortext" class="nav-link active" aria-current="page" href="~/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
            }
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="border-top footer text-muted">
        <div class="container">
            <div class="contact-info">
                <h5>Contact Us</h5>
                <p>123 Clinic Avenue, Health City, HC 12345</p>
                <p>Phone: +1 (555) 123-4567</p>
                <p>Email: contact@clinicname.com</p>
            </div>
            <div class="quick-links">
                <h5>Quick Links</h5>
                <a href="#">Home</a><br>
                <a href="#">Appointments</a><br>
                <a href="#">Make Reservations</a><br>
                <a href="#">Contact Us</a>
            </div>
        </div>
        <div class="social-links">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <div class="container mt-3">
            <p>&copy; 2024 Clinic Name. All rights reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>
</html>
